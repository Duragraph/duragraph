{
  "name": "ChatBot",
  "version": "1.0.0",
  "description": "Simple chatbot workflow with LLM and tool calls",
  "nodes": [
    {
      "id": "start",
      "type": "start",
      "config": {}
    },
    {
      "id": "llm_call",
      "type": "llm",
      "config": {
        "model": "gpt-4",
        "temperature": 0.7,
        "max_tokens": 1000
      }
    },
    {
      "id": "tool_search",
      "type": "tool",
      "config": {
        "tool_name": "search",
        "parameters": ["query"]
      }
    },
    {
      "id": "end",
      "type": "end",
      "config": {}
    }
  ],
  "edges": [
    {
      "source": "start",
      "target": "llm_call"
    },
    {
      "source": "llm_call", 
      "target": "tool_search",
      "condition": {
        "requires_search": true
      }
    },
    {
      "source": "tool_search",
      "target": "end"
    }
  ],
  "config": {
    "timeout": "10m",
    "retry_policy": "exponential_backoff"
  }
}